<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
	android:id="@+id/mainLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/bg"
	android:gravity="center_horizontal"
	android:orientation="vertical"
	>
		<TextView
		android:id="@+id/startText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30sp"
		android:typeface="sans"
		android:textStyle="bold"
		android:gravity="center"
		>
		</TextView>
		<AbsoluteLayout
		android:id="@+id/separator"
		android:layout_width="fill_parent"
		android:layout_height="3px"
		android:background="#000000"
		>
		</AbsoluteLayout>
		<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="40sp"
		>
			<ImageButton
			android:id="@+id/previousday"
			android:src="@drawable/prevnav"
			android:layout_width="40px"
			android:layout_height="40px"
			android:background="@drawable/iconbg"
			android:layout_marginTop="2px"
			android:layout_marginLeft="5px"
			android:layout_marginBottom="2px"
			android:layout_alignParentLeft="true"
			>
			</ImageButton>
			<TextView
			android:id="@+id/date"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="20sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:paddingLeft="10px"
			android:paddingRight="10px"
			android:paddingTop="5px"
			android:paddingBottom="5px"
			android:layout_marginTop="2px"
			android:layout_marginBottom="2px"
			android:layout_centerHorizontal="true"
			>
			</TextView>
			<ImageButton
			android:id="@+id/nextday"
			android:src="@drawable/nextnav"
			android:layout_width="40px"
			android:layout_height="40px"
			android:background="@drawable/iconbg"
			android:layout_marginTop="2px"
			android:layout_marginRight="5px"
			android:layout_marginBottom="2px"
			android:layout_alignParentRight="true"
			>
			</ImageButton>
		</RelativeLayout>
		<AbsoluteLayout
		android:id="@+id/separator"
		android:layout_width="fill_parent"
		android:layout_height="2px"
		android:background="#000000"
		>
		</AbsoluteLayout>
		<ScrollView 
		android:id="@+id/ScrollView01" 
		android:layout_width="fill_parent" 
		android:scrollbars="none" android:layout_height="300sp">
			<TableLayout
			android:id="@+id/schedule" 
			android:layout_width="fill_parent" 
			android:layout_height="fill_parent"
	    	android:stretchColumns="1"
			>
			</TableLayout>
		</ScrollView>
		<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:orientation="horizontal" 
				android:minHeight="80px"
				>
					<ImageButton
					android:id="@+id/previous"
					android:src="@drawable/previous"
					android:layout_width="60px"
					android:layout_height="60px"
					android:background="@drawable/iconbg"
					android:layout_marginLeft="5px"
					android:layout_marginBottom="5px"
					android:visibility="visible"
					android:layout_alignParentLeft="true"
					android:layout_alignParentBottom="true"
					>
					</ImageButton>
					<ImageView
					android:id="@+id/animation"
					android:layout_width="64px"
					android:layout_height="64px"
					android:layout_marginLeft="50px"
					android:layout_marginBottom="5px"
					android:visibility="invisible"
					android:layout_centerHorizontal="true"
					android:layout_alignParentBottom="true"
					>
					</ImageView>
					<ImageButton
					android:id="@+id/help"
					android:src="@drawable/help"
					android:background="@drawable/iconbg"
					android:layout_width="64px"
					android:layout_height="64px"
					android:layout_marginLeft="50px"
					android:layout_marginBottom="5px"
					android:visibility="invisible"
					android:layout_alignParentRight="true"
					android:layout_alignParentBottom="true"
					>
					</ImageButton>
				</RelativeLayout>
	</LinearLayout>
	<RelativeLayout
	android:id="@+id/popupView" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:visibility="gone"
	>
		<LinearLayout
		android:id="@+id/popupWindow" 
		android:layout_width="250px" 
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@drawable/popupborderfull"
		>
			<TextView
			android:id="@+id/popupText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="16sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="center" 
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:layout_marginTop="30px"
			android:layout_marginBottom="30px"
			>
			</TextView>
		</LinearLayout>
	</RelativeLayout>
</FrameLayout>