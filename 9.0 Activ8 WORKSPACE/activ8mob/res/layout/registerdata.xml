<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
	android:id="@+id/mainLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bg"
	>
		<TextView
		android:id="@+id/startText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30sp"
		android:typeface="sans"
		android:textStyle="bold"
		android:gravity="center"
		>
		</TextView>
		<LinearLayout
		android:id="@+id/separator"
		android:layout_width="fill_parent"
		android:layout_height="3px"
		android:background="#000000"
		>
		</LinearLayout>
		<TextView
		android:id="@+id/requestText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="24sp"
		android:typeface="sans"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_marginTop="10px"
		>
		</TextView>
		<RelativeLayout
		android:id="@+id/firstname"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="15px"
		>
			<TextView
			android:id="@+id/requestFirst"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="20sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			>
			</TextView>
			<EditText
			android:id="@+id/firstText"
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:text=""
			android:textColor="#000000"
			android:textSize="20sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:singleLine="true"
			>
			</EditText>
		</RelativeLayout>
		<RelativeLayout
		android:id="@+id/lastname"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="15px"
		>
			<TextView
			android:id="@+id/requestLast"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="20sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			>
			</TextView>
			<EditText
			android:id="@+id/lastText"
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:text=""
			android:textColor="#000000"
			android:textSize="20sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:singleLine="true"
			>
			</EditText>
		</RelativeLayout>
		<RelativeLayout
		android:id="@+id/date"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="25dp"
		android:layout_marginRight="25dp"
		android:layout_marginTop="15px"
		>
			<TextView
			android:id="@+id/requestDate"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="15sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			>
			</TextView>
			<EditText
			android:id="@+id/dateText"
			android:layout_width="150dp"
			android:layout_height="40dp"
			android:text=""
			android:textColor="#000000"
			android:textSize="20sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:inputType="date"
			android:singleLine="true"
			>
			</EditText>
		</RelativeLayout>
		<RadioGroup
		android:id="@+id/sex"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="25dp"
		android:layout_marginTop="15dp"
		>
			<RadioButton
			android:id="@+id/male"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:checked="true"
			/>
			<RadioButton
			android:id="@+id/female"
			android:layout_marginLeft="25dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			/>
		</RadioGroup>
		<LinearLayout
		android:id="@+id/questcontrol"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:orientation="horizontal" 
		android:layout_marginTop="5px"
		android:gravity="center"
		>
			<ImageButton
			android:id="@+id/ok"
			android:src="@drawable/ok"
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@drawable/iconbg" 
			>
			</ImageButton>
		</LinearLayout>
	</LinearLayout>
	<RelativeLayout
	android:id="@+id/popupView" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:visibility="gone"
	>
		<LinearLayout
		android:id="@+id/popupWindow" 
		android:layout_width="250px" 
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@drawable/popupborderfull"
		>
			<TextView
			android:id="@+id/popupText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="16sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="center" 
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:layout_marginTop="30px"
			android:layout_marginBottom="30px"
			>
			</TextView>
			<ImageView
			android:id="@+id/popupImage"
			android:layout_width="64px"
			android:layout_height="64px"
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:visibility="gone"
			android:layout_marginTop="20px"
			android:layout_marginBottom="30px"
			>
			</ImageView>
		</LinearLayout>
	</RelativeLayout>
</FrameLayout>