<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
	android:id="@+id/mainLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bg"
	>
		<TextView
		android:id="@+id/startText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="25sp"
		android:typeface="sans"
		android:textStyle="bold"
		android:gravity="center"
		>
		</TextView>
		<LinearLayout
		android:id="@+id/separator"
		android:layout_width="fill_parent"
		android:layout_height="3px"
		android:background="#000000"
		>
		</LinearLayout>
		<TextView
		android:id="@+id/requestText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="20sp"
		android:typeface="sans"
		android:textStyle="bold"
		android:gravity="center"
		android:layout_marginTop="10px"
		>
		</TextView>
		<RelativeLayout
		android:id="@+id/weight"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10px"
		>
			<TextView
			android:id="@+id/requestWeight"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="18sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="top"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			>
			</TextView>
			<EditText
			android:id="@+id/weightText"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#000000"
			android:textSize="18sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="center_vertical"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:inputType="numberDecimal"
			>
			</EditText>
		</RelativeLayout>
		<RelativeLayout
		android:id="@+id/height"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10px"
		>
			<TextView
			android:id="@+id/requestHeight"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="18sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="top"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			>
			</TextView>
			<EditText
			android:id="@+id/heightText"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#000000"
			android:textSize="18sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="center_vertical"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:inputType="number"
			>
			</EditText>
		</RelativeLayout>
		<RelativeLayout
		android:id="@+id/date"
		android:visibility="invisible"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_marginTop="10px"
		>
			<TextView
			android:id="@+id/requestDate"
			android:layout_width="120dp"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="15sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentLeft="true"
			>
			</TextView>
			<EditText
			android:id="@+id/dateText"
			android:layout_width="150dp"
			android:layout_height="wrap_content"
			android:text=""
			android:textColor="#000000"
			android:textSize="18sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:inputType="date"
			android:singleLine="true"
			>
			</EditText>
		</RelativeLayout>
		<RelativeLayout
		android:id="@+id/questcontrol"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_marginTop="5px"
		android:layout_marginBottom="10px"
		>
			<ImageButton
			android:id="@+id/back"
			android:src="@drawable/previous"
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@drawable/iconbg" 
			android:layout_marginLeft="5px"
			android:layout_alignParentLeft="true"
			android:layout_alignParentBottom="true"
			>
			</ImageButton>
			<ImageButton
			android:id="@+id/next"
			android:src="@drawable/next"
			android:layout_width="60px"
			android:layout_height="60px"
			android:background="@drawable/iconbg" 
			android:layout_marginRight="5px"
			android:layout_alignParentRight="true"
			android:layout_alignParentBottom="true"
			>
			</ImageButton>
		</RelativeLayout>
	</LinearLayout>
	<RelativeLayout
	android:id="@+id/popupView" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:visibility="gone"
	>
		<LinearLayout
		android:id="@+id/popupWindow" 
		android:layout_width="250px" 
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@drawable/popupborderfull"
		>
			<TextView
			android:id="@+id/popupText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="16sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="center" 
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:layout_marginTop="30px"
			android:layout_marginBottom="30px"
			>
			</TextView>
			<ImageView
			android:id="@+id/popupImage"
			android:layout_width="64px"
			android:layout_height="64px"
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:visibility="gone"
			android:layout_marginTop="20px"
			android:layout_marginBottom="30px"
			>
			</ImageView>
		</LinearLayout>
	</RelativeLayout>
</FrameLayout>