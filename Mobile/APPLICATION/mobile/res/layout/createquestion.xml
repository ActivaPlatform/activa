<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
android:id="@+id/layout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
>
	<LinearLayout
	android:id="@+id/mainLayout"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:background="@drawable/bg"
	>
		<TextView
		android:id="@+id/startText"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000"
		android:textSize="30sp"
		android:typeface="sans"
		android:textStyle="bold"
		android:gravity="center"
		>
		</TextView>
		<LinearLayout
		android:id="@+id/separator"
		android:layout_width="fill_parent"
		android:layout_height="3px"
		android:background="#000000"
		>
		</LinearLayout>
		<ScrollView
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="340dip"
		android:scrollbarFadeDuration="60000"
		android:padding="5dp"
		>
			<LinearLayout 
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:padding="5dp"
			android:orientation="vertical"
			android:gravity="center_horizontal"
			>
				<RelativeLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginLeft="25dp"
				android:layout_marginRight="25dp"
				android:layout_marginTop="15px"
				>
					<TextView
					android:id="@+id/textrequest"
					android:layout_width="120dp"
					android:layout_height="wrap_content"
					android:textColor="#000000"
					android:textSize="20sp"
					android:typeface="sans"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_alignParentLeft="true"
					>
					</TextView>
					<EditText
					android:id="@+id/text"
					android:layout_width="150dp"
					android:layout_height="40dp"
					android:text=""
					android:textColor="#000000"
					android:textSize="20sp"
					android:typeface="sans"
					android:textStyle="bold"
					android:layout_centerVertical="true"
					android:layout_alignParentRight="true"
					android:singleLine="true"
					>
					</EditText>
			</RelativeLayout>
			<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15px"
			>
				<TextView android:id="@+id/nextrequest"
				android:layout_width="120dp"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="20sp"
				android:typeface="sans"
				android:textStyle="bold"
				/>
				<Spinner 
				android:id="@+id/next"
				android:padding="10sp"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				/>
			</LinearLayout>
			<RelativeLayout android:id="@+id/optionallayout"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:layout_marginTop="15px"
			android:visibility="gone"
			>
				<TextView android:id="@+id/optionalrequest"
				android:layout_width="160dp"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="20sp"
				android:typeface="sans"
				android:textStyle="bold"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				/>
				<CheckBox 
				android:id="@+id/optional"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_alignParentRight="true"
				/>
			</RelativeLayout>
			<RelativeLayout 
			android:id="@+id/answershead"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:orientation="horizontal"
			android:visibility="gone"
			>
				<TextView android:id="@+id/answersrequest"
				android:layout_width="160dp"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="20sp"
				android:typeface="sans"
				android:textStyle="bold"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				/>
				<ImageButton 
				android:id="@+id/addanswer"
				android:src="@drawable/plus"
				android:background="@drawable/iconbg"
				android:layout_width="40px"
				android:layout_height="40px"
				android:scaleType="fitXY"
				android:layout_toRightOf="@id/answersrequest"
				/>
			</RelativeLayout>
			<LinearLayout
			android:id="@+id/answers"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginBottom="10px"
			android:layout_marginLeft="75dp"
			android:layout_marginRight="25dp"
			android:visibility="gone">
			</LinearLayout>
			<RelativeLayout 
			android:id="@+id/conditionhead"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:orientation="horizontal"
			android:visibility="gone"
			>
				<TextView android:id="@+id/conditionrequest"
				android:layout_width="160dp"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="20sp"
				android:typeface="sans"
				android:textStyle="bold"
				android:layout_centerVertical="true"
				android:layout_alignParentLeft="true"
				/>
				<ImageButton 
				android:id="@+id/addcondition"
				android:src="@drawable/plus"
				android:background="@drawable/iconbg"
				android:layout_width="40px"
				android:layout_height="40px"
				android:scaleType="fitXY"
				android:layout_toRightOf="@id/conditionrequest"
				/>
			</RelativeLayout>
			<LinearLayout
			android:id="@+id/conditions"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10px"
			android:layout_marginLeft="75dp"
			android:layout_marginRight="25dp"
			android:orientation="vertical"
			android:visibility="gone">
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
	<RelativeLayout
	android:id="@+id/questcontrol"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="horizontal" 
	android:layout_marginTop="5px"
	>
		<ImageButton
		android:id="@+id/previous"
		android:src="@drawable/previous"
		android:layout_width="60px"
		android:layout_height="60px"
		android:scaleType="fitXY"
		android:background="@drawable/iconbg"
		android:layout_marginLeft="5px"
		android:layout_marginBottom="5px"
		android:visibility="visible"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		>
		</ImageButton>
		<ImageButton
		android:id="@+id/help"
		android:src="@drawable/help"
		android:background="@drawable/iconbg"
		android:layout_width="60px"
		android:layout_height="60px"
		android:scaleType="fitXY"
		android:layout_marginRight="5px"
		android:layout_marginBottom="5px"
		android:visibility="invisible"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		>
		</ImageButton>
	</RelativeLayout>
	</LinearLayout>
	<RelativeLayout
	android:id="@+id/popupView" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:visibility="gone"
	>
		<LinearLayout
		android:id="@+id/popupWindow" 
		android:layout_width="250px" 
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:orientation="vertical"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:background="@drawable/popupborderfull"
		>
			<TextView
			android:id="@+id/popupText"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"
			android:textSize="16sp"
			android:typeface="sans"
			android:textStyle="bold"
			android:gravity="center" 
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:layout_marginTop="30px"
			android:layout_marginBottom="30px"
			>
			</TextView>
			<ImageView
			android:id="@+id/popupImage"
			android:layout_width="64px"
			android:layout_height="64px"
			android:layout_marginLeft="5px"
			android:layout_marginRight="5px"
			android:visibility="gone"
			android:layout_marginTop="20px"
			android:layout_marginBottom="30px"
			>
			</ImageView>
		</LinearLayout>
	</RelativeLayout>
</FrameLayout>