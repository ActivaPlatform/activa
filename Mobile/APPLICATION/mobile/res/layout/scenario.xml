<?xml version="1.0" encoding="utf-8"?>
<FrameLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/basiclayout" 
android:layout_width="fill_parent"
android:layout_height="fill_parent"
>
	<RelativeLayout 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	>
		<HorizontalScrollView 
		android:id="@+id/ScrollView" 
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent"
		android:scrollbars="none"
		android:background="#000000"
		android:scrollX="180px"
		>
			<AbsoluteLayout 
			android:id="@+id/Background"
			android:layout_width="wrap_content" 
			android:layout_height="fill_parent"
			>
			</AbsoluteLayout>
		</HorizontalScrollView>	
		<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:layout_alignParentTop="true"
		android:layout_marginTop="10sp"
		>
			<ImageView
			android:id="@+id/left"
			android:background="@drawable/scrollleft"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15sp"
	        android:layout_alignParentLeft="true"
			>
			</ImageView>
			<ImageView
			android:id="@+id/right"
			android:background="@drawable/scrollright"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="15sp"
	        android:layout_alignParentRight="true"
			>
			</ImageView>
		</RelativeLayout>
		<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
		android:layout_marginBottom="20sp"
		>
			<ImageButton
			android:id="@+id/miscbutton"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="15sp"
	        android:layout_alignParentLeft="true"
			>
			</ImageButton>
			<ImageButton
			android:id="@+id/options"
			android:visibility="gone"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="15sp"
	        android:layout_alignParentRight="true"
			>
			</ImageButton>
		</RelativeLayout>
		<ImageView
		android:id="@+id/promotion"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:scaleType="centerCrop"
		>
		</ImageView>
		<RelativeLayout
		android:id="@+id/popupView" 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:visibility="gone"
		>
			<LinearLayout
			android:id="@+id/popupWindow" 
			android:layout_width="250sp" 
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:background="@drawable/popupborder"
			>
				<ImageView
				android:id="@+id/popupPromotion"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="5sp"
				android:layout_marginRight="5sp"
				android:visibility="gone"
				android:layout_marginTop="20sp"
				android:layout_marginBottom="30sp"
				android:scaleType="fitXY"
				>
				</ImageView>
				<TextView
				android:id="@+id/popupPromotionText"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="20sp"
				android:visibility="gone"
				android:typeface="sans"
				android:textStyle="bold"
				android:gravity="center" 
				android:layout_marginLeft="5sp"
				android:layout_marginRight="5sp"
				android:layout_marginBottom="30sp"
				>
				</TextView>
				<TextView
				android:id="@+id/popupText"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:textColor="#000000"
				android:textSize="16sp"
				android:typeface="sans"
				android:textStyle="bold"
				android:gravity="center" 
				android:layout_marginLeft="5sp"
				android:layout_marginRight="5sp"
				android:layout_marginTop="30sp"
				android:layout_marginBottom="30sp"
				>
				</TextView>
				<ImageView
				android:id="@+id/popupImage"
				android:layout_width="64px"
				android:layout_height="64px"
				android:layout_marginLeft="5sp"
				android:layout_marginRight="5sp"
				android:visibility="gone"
				android:layout_marginTop="20sp"
				android:layout_marginBottom="30sp"
				>
				</ImageView>
			</LinearLayout>
		</RelativeLayout>
	</RelativeLayout>
</FrameLayout>
