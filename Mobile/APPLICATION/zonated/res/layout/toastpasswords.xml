<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/toastpasswordsroot"
android:orientation="vertical"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:padding="10dp"
android:gravity="center_horizontal"
>
    <TextView android:id="@+id/passwordsexpl"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:textSize="14dp"
    android:layout_marginBottom="10dp"
    />
    <ScrollView
	android:id="@+id/toastaddeventroot"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:scrollbarFadeDuration="60000"
	>
	    <LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		>
			<LinearLayout
			android:id="@+id/passwords"
			android:orientation="vertical"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			>
			</LinearLayout>
		    <ImageButton android:id="@+id/passok"
			android:layout_width="60px"
			android:layout_height="60px"
			android:src="@drawable/ok"
			android:background="@drawable/iconbg"
		    />
		</LinearLayout>
	</ScrollView>
</LinearLayout>